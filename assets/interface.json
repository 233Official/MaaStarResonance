        // "鱼竿选择",
        // "鱼饵选择",
        // "购买鱼竿",
        // "购买鱼饵"
        "鱼竿选择": {
            "cases": [
                {
                    "name": "普通鱼竿",
                    "pipeline_override": {}
                },
                {
                    "name": "强韧鱼竿",
                    "pipeline_override": {}
                },
                {
                    "name": "柔韧鱼竿",
                    "pipeline_override": {}
                }
            ]
        },
        "鱼饵选择": {
            "cases": [
                {
                    "name": "普通鱼饵",
                    "pipeline_override": {}
                },
                {
                    "name": "不空军鱼饵",
                    "pipeline_override": {}
                },
                {
                    "name": "特制鱼饵",
                    "pipeline_override": {}
                }
            ]
        },
        "购买鱼竿": {
            "cases": [
                {
                    "name": "No",
                    "pipeline_override": {
                        "BuyFishingRod": {
                            "enabled": false
                        }
                    }
                },
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "BuyFishingRod": {
                            "enabled": true
                        }
                    }
                }
            ]
        },
        "购买鱼饵": {
            "cases": [
                {
                    "name": "No",
                    "pipeline_override": {
                        "BuyFishingBait": {
                            "enabled": false
                        }
                    }
                },
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "BuyFishingBait": {
                            "enabled": true
                        }
                    }
                }
            ]
        }

