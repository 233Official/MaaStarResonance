{
    "tabWidth": 4,
    "printWidth": 120,
    "useTabs": false,
    "bracketSameLine": true,
    "bracketSpacing": false,
    "endOfLine": "auto",
    "plugins": [
        "prettier-plugin-multiline-arrays"
    ],
    "overrides": [
        {
            "files": [
                "**/*.yml",
                "**/*.yaml"
            ],
            "options": {
                "parser": "yaml",
                "tabWidth": 2
            }
        },
        {
            "files": [
                "*.json"
            ],
            "options": {
                "parser": "json",
                "useTabs": false,
                "tabWidth": 4,
                "bracketSameLine": false
            }
        },
        {
            "files": ["assets/resource/**/pipeline/**/*.json"],
            "options": {
                "multilineArraysWrapThreshold": 5
            }
        },
        {
            "files": ["assets/interface.json"],
            "options": {
                "multilineArraysWrapThreshold": 1
            }
        }
    ]
}
